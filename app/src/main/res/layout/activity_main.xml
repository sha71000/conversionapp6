<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/currency_button"
        android:layout_width="259dp"
        android:layout_height="0dp"
        android:layout_marginBottom="25dp"
        android:background="#8BC34A"
        android:onClick="onclick1"
        android:text="Currency"
        app:layout_constraintBottom_toTopOf="@+id/height_button"
        app:layout_constraintEnd_toEndOf="@+id/height_button"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="269dp"
        android:layout_height="51dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="82dp"
        android:layout_marginBottom="36dp"
        android:text="what do You want to convert?"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="serif"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/height_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:background="#CDDC39"
        android:onClick="onClick3"
        android:text="Height"
        app:layout_constraintBottom_toTopOf="@+id/weight_button"
        app:layout_constraintEnd_toEndOf="@+id/weight_button"
        app:layout_constraintStart_toStartOf="@+id/weight_button"
        app:layout_constraintTop_toBottomOf="@+id/currency_button" />

    <Button
        android:id="@+id/weight_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="24dp"
        android:background="#FFEB3B"
        android:text="Weight"
        app:layout_constraintBottom_toTopOf="@+id/temp_button"
        app:layout_constraintEnd_toEndOf="@+id/temp_button"
        app:layout_constraintStart_toStartOf="@+id/temp_button"
        app:layout_constraintTop_toBottomOf="@+id/height_button" />

    <Button
        android:id="@+id/temp_button"
        android:layout_width="258dp"
        android:layout_height="0dp"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginBottom="53dp"
        android:background="#FFC107"
        android:onClick="onclick4"
        android:text="Temperature"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight_button" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="313dp"
        android:layout_height="113dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="63dp"
        app:layout_constraintBottom_toTopOf="@+id/currency_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img" />

</androidx.constraintlayout.widget.ConstraintLayout>